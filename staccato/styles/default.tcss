/* ===== STACCATO DARK THEME ===== */

Screen {
    background: #0a0e14;
}

/* Header */
Header {
    background: #151922;
    border-bottom: solid #414868;
    padding: 0 1;
    height: 3;
}

Header > Static {
    color: #7aa2f7;
    text-style: bold;
}

/* Title */
.header {
    text-style: bold;
    color: #7aa2f7;
    padding: 1 2;
    min-height: 3;
    height: auto;
}

/* Main Container */
#main {
    padding: 1;
    layout: vertical;
    height: 1fr;
}

/* Stats Panel */
StatsPanel {
    layout: horizontal;
    min-height: 5;
    height: auto;
    margin: 1 0;
}

/* Piano Roll */
PianoRollWidget {
    background: #1a202c;
    border: solid #7aa2f7;
    min-height: 15;
    height: 2fr;
    margin: 1 0;
    padding: 1;
}

/* Event Log */
EventLog {
    background: #151922;
    border: solid #414868;
    min-height: 10;
    height: 1fr;
    overflow-y: auto;
    padding: 0 1 1 1;
    scrollbar-gutter: stable;
}

EventLog RichLog {
    scrollbar-background: #0a0e14;
    scrollbar-color: #7aa2f7;
}

/* Controls */
#controls {
    margin: 1 0;
    min-height: 3;
    height: auto;
}

/* Buttons */
Button {
    background: #1a202c;
    border: solid #414868;
    color: #c0caf5;
    margin: 0 1;
    min-width: 16;
}

Button:hover {
    background: #7aa2f7;
    color: #0a0e14;
}

Button.-primary {
    background: #7aa2f7;
    color: #0a0e14;
}

Button.-warning {
    background: #e0af68;
    color: #0a0e14;
}

/* Footer */
Footer {
    background: #151922;
    border-top: solid #414868;
}
